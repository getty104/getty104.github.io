{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "declaration":true,
    "emitDecoratorMetadata":true,
    "experimentalDecorators":true,
    "baseUrl": "src",
    "lib": [
      "es6",
      "dom",
      "es2015.promise"
    ],
    "module":"es6",
    "moduleResolution":"node",
    "sourceMap":true,
    "target":"es5",
    "jsx":"react",
    "noImplicitAny":true,
    "noImplicitThis":true,
    "noImplicitReturns":true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks":true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "compileOnSave":true
}
